#!/usr/bin/make -f

BUILDDIR = build_dir
SUBDIR = example-4/

# secondly called by launchpad
build:
	mkdir $(SUBDIR)$(BUILDDIR);
	cd $(SUBDIR)$(BUILDDIR); cmake -DCMAKE_INSTALL_PREFIX=../debian/tmp/usr -DRTLSDR=ON ..
	make -C $(SUBDIR)$(BUILDDIR)

# thirdly called by launchpad
binary: binary-indep binary-arch

binary-indep:
	# nothing to be done

binary-arch:
	cd $(SUBDIR)$(BUILDDIR); cmake -P cmake_install.cmake
	mkdir $(SUBDIR)debian/tmp/DEBIAN
	dpkg-gencontrol -pdab-cmdline
	dpkg --build $(SUBDIR)debian/tmp ..

# firstly called by launchpad
clean:
	rm -f build
	rm -rf $(SUBDIR)$(BUILDDIR)

.PHONY: binary binary-arch binary-indep clean
